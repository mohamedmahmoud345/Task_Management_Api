modules = ["dotnet-7.0", "dotnet-9.0"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "API Server"

[[workflows.workflow]]
name = "API Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd TaskManagementApi && dotnet run --project TaskManagement.Api.csproj"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 38809
externalPort = 3000

[deployment]
deploymentTarget = "autoscale"
run = ["dotnet", "run", "--project", "TaskManagementApi/TaskManagement.Api.csproj", "--no-build", "-c", "Release"]
build = ["dotnet", "build", "TaskManagementApi/TaskManagement.Api.csproj", "-c", "Release"]
